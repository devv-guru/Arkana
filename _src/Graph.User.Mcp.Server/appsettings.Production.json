{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "McpServer": {
    "Security": {
      "ValidateProxyHeaders": true,
      "ValidateArkToken": true,
      "AllowedProxyHeaders": ["X-MS-Graph-Proxy"],
      "RequiredProxyHeaderValue": "true"
    },
    "Logging": {
      "EnableStructuredLogging": true,
      "LogGraphApiCalls": true,
      "LogRequestHeaders": false,
      "LogLevel": "Information"
    },
    "Performance": {
      "GraphApiTimeoutSeconds": 30,
      "MaxRetryAttempts": 3,
      "RetryDelaySeconds": 2,
      "EnableResponseCaching": true,
      "CacheDurationSeconds": 300
    },
    "Features": {
      "EnableDiagnostics": false,
      "EnableMetrics": true,
      "EnableDistributedTracing": true,
      "EnabledTools": [
        "get_my_profile",
        "list_users",
        "list_groups",
        "get_group_members",
        "search_users",
        "get_my_messages",
        "get_my_events"
      ]
    }
  },
  "RateLimit": {
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "QueueLimit": 10
  },
  "Diagnostics": {
    "ApiKey": "${DIAGNOSTICS_API_KEY}"
  },
  "AllowedHosts": "*"
}