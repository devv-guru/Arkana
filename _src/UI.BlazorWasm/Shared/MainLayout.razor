@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase

<div class="page">
    <FluentDesignSystemProvider>
        <FluentStack Class="app-header" Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
            <FluentStackItem>
                <FluentLabel Typo="Typography.H3">Arkana Gateway</FluentLabel>
            </FluentStackItem>
            <FluentStackItem HorizontalAlignment="HorizontalAlignment.End">
                <FluentNavMenu>
                    <FluentNavLink Href="/" Match="NavLinkMatch.All">Home</FluentNavLink>
                    <FluentNavLink Href="/configuration">Configuration</FluentNavLink>
                    <FluentNavLink Href="/metrics">Metrics</FluentNavLink>
                    <FluentNavLink Href="/certificates">Certificates</FluentNavLink>
                </FluentNavMenu>
            </FluentStackItem>
        </FluentStack>

        <div class="main-content">
            <FluentCard>
                @Body
            </FluentCard>
        </div>
    </FluentDesignSystemProvider>
</div>

<style>
    .page {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .app-header {
        padding: 1rem;
        background-color: var(--neutral-layer-1);
        border-bottom: 1px solid var(--neutral-stroke-rest);
    }

    .main-content {
        flex: 1;
        padding: 1.5rem;
        overflow: auto;
    }
</style>
