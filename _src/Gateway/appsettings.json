{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Gateway.Middleware.PromptInjectionMiddleware": "Debug",
      "Gateway.Services.PromptSafetyService": "Debug",
      "Yarp.ReverseProxy.Health": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=gateway.db"
  },
  "ReverseProxy": {
    "Routes": {
      "mcp-msgraph-health-route": {
        "ClusterId": "mcp-msgraph-cluster",
        "Match": {
          "Path": "/mcp/msgraph/health"
        },
        "Transforms": [
          {
            "PathSet": "/health"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "{RequestScheme}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{RequestHost}"
          }
        ]
      },
      "mcp-msgraph-info-route": {
        "ClusterId": "mcp-msgraph-cluster",
        "Match": {
          "Path": "/mcp/msgraph/info"
        },
        "Transforms": [
          {
            "PathSet": "/"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "{RequestScheme}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{RequestHost}"
          }
        ]
      },
      "mcp-msgraph-route": {
        "ClusterId": "mcp-msgraph-cluster",
        "Match": {
          "Path": "/mcp/msgraph/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/mcp/{**catch-all}"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "{RequestScheme}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{RequestHost}"
          }
        ]
      }
    },
    "Clusters": {
      "mcp-msgraph-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Enabled": true,
          "Interval": "00:00:30",
          "Timeout": "00:00:10",
          "Threshold": 3,
          "Path": "/health"
        },
        "Destinations": {
          "default": {
            "Address": "http://localhost:7000/"
          }
        }
      }
    }
  },
  "PromptSafety": {
    "RiskThreshold": 0.7,
    "EnableBlocking": true,
    "LogAllAnalysis": false
  },
  "Swagger": {
    "Title": "Arkana MCP Gateway",
    "Version": "v1",
    "Description": "Enterprise security gateway for Model Context Protocol servers"
  }
}
