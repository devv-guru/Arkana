{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Server": {
    "VerifiedDomain": "localhost"
  },
  "CertificatesOptions": {
    "Certificates": [
      {
        "HostName": "example.com",
        "CertificateSource": "LocalFile",
        "Location": "/path/to/certificate/example.pfx",
        "Password": "password"
      },
      {
        "HostName": "another-example.com",
        "CertificateSource": "KeyVault",
        "Location": "https://<your-keyvault-name>.vault.azure.net/secrets/another-cert",
        "Password": ""
      }
    ]
  }
}
